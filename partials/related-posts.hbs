<div id = related-div class="related-wrapper gh-outer">
    {{#get "posts" limit="4" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags,authors" as |related|}}
        {{#if related}}
        <section class="related-posts gh-inner">
            <h3 class="related-title">
                <span class="text">You might also like...</span>
            </h3>
            <div class="post-feed">
                {{#foreach related}}
                    {{> "loop"}}
                {{/foreach}}
            </div>
        </section>
       {{else}}
           <script>document.getElementById('related-div').classList.add('invisible');</script>
       {{/if}}
    {{/get}}
</div>
